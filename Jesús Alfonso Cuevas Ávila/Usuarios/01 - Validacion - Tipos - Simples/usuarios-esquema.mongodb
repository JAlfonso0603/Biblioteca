// Usar la Base de Datos.
use('Biblioteca_Mangas')

// Creación de la colección de usuarios.
db.createCollection('usuarios', {
    validator:{
        $jsonSchema: {
            bsonType: 'object',
            title: "Objeto de Usuarios de la Biblioteca de Mangas",
            required: ['user', 'password'],
            properties: {
                nombre: {
                    bsonType: 'string',
                    description: 'Nombre de pila del cliente'
                },
                apePat: {
                    bsonType: 'string',
                    description: 'Apellido paterno del cliente'
                },
                apeMat: {
                    bsonType: 'string',
                    description: 'Apellido materno del cliente'
                },
                user: {
                    bsonType: 'string',
                    description: 'Nombre de usuario del cliente'
                },
                password: {
                    bsonType: 'string',
                    description: 'Contraseña del cliente'
                },
                habilitado: { 
                    bsonType: 'bool'
                }
            }
        }
    }
})